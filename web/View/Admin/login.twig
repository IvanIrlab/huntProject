<body>
  <header class='fixed'>
    <nav>
      <a href="{{ basePath }}/index.php" class="logo"><img src="{{ basePath }}/img/logoNigma.jpg" alt="logo.png"/>Nigma Hunt</a>
      {% if admin_active.isAuthenticated == false %}
      <a href="{{ basePath }}/index.php/aboutUs">about us</a>
      <a href="{{ basePath }}/index.php/contact">contact</a>
      <a href="#" id="login">login</a>
      {% else %}
      <a href="{{ basePath }}/index.php/admin/createHunt" id="addHunt">Create</a>
      <a href="#" id="ManageHunt">Management</a>
      {% endif %}
    </nav>
    {% if admin_active.isAuthenticated == true %}
    <div class="admin-logged">
      <h4>Admin : {{ app.session.get('firstName')}} {{  app.session.get('lastName')}} <span>connecté</span></h4>
      <ul class="link-list">
        <!-- Code HTML/PHP à écrire -->
        <li class="layout-right">
            <a class="button-disconnect" href="{{ basePath }}/index.php/admin/logout">Déconnexion</a>
        </li>
      </ul>
    </div>
    {% endif %}
