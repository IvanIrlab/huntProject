    </div>
    <div class="login-page hide">
      <form class="form-login" action="{{ basePath }}/index.php/admin/login" method="post">
        <fieldset>
          <ul>
            <li>
              <label for="pseudo">Pseudo :</label>
              <input type="text" id="pseudo" name="pseudo">
            </li>
            <li>
              <label for="password">Mot de passe :</label>
              <input type="text" id="password" name="password">
            </li>
            <li class='button-action'>
              <button class="button-send" type="submit">Connexion</button>
              <a class="button-cancel" href="#">Annuler</a>
            </li>
            <li  id="signup">
              <a href="#">Inscription</a>
            </li>
          </ul>
        </fieldset>
      </form>
    </div>
    <div class="signup-page hide">
      <form class="form-signup" action="{{ basePath }}/index.php/admin/signup" method="post">
      <h3>INSCRIPTION</h3>
        <fieldset>
      		<ul>
      			<li>
      				<label for="lastName">Nom :</label>
      				<input id="lastName" type="text" name="lastName" value="">
      			</li>
      			<li>
      				<label for="firstName">Prénom :</label>
      				<input id="firstName" type="text" name="firstName" value="">
      			</li>
      			<li>
      				<label class="textarea" for="address">Adresse :</label>
      				<textarea id="address" name="address" rows="5" cols="59"></textarea>
      			</li>
      			<li>
      				<label for="city">Ville :</label>
      				<input id="city" type="text" name="city" value="">
      			</li>
      			<li>
      				<label for="zipCode">Code Postal :</label>
      				<input id="zipCode" class="zip-code" type="text" maxlength="5" name="zipCode" value="">
      			</li>
      			<li>
      				<label for="country">Pays :</label>
      				<input id="country" type="text" maxlength="20" name="country">
      			</li>
      			<li>
      				<label for="phone">Téléphone :</label>
      				<input id="phone" class="phone" type="text" maxlength="10" name="phone" value="">
      			</li>
      		</ul>
      	</fieldset>
      	<fieldset>
      		<ul>
  	        <li>
  	            <label for="email">E-mail :</label>
  	            <input id="email" type="text" name="email" value="">
  	        </li>
  	        <li>
  	            <label for="password">Mot de passe :</label>
  	            <input id="password" type="text" name="password">
  	        </li>
      		</ul>
      	</fieldset>
      	<ul>
          <li class='button-action'>
            <button class="button-send" type="submit">Valider</button>
            <a class="button-cancel" href="#">Annuler</a>
          </li>
      	</ul>
      </form>
    </div>
